#!/bin/sh

ci() {
  GIT_ROOT=$(git rev-parse --show-toplevel)
  cd "$GIT_ROOT"

  GITLAB_CI=".gitlab-ci.*"
  if [ -e $GITLAB_CI ]; then
    local url="$(gits -o remote)/-/pipelines/"
    open $url
  elif [ $(basename $GIT_ROOT) == "main" ]; then
    open "https://deploy.jenkins.cj.dev/"
    open "https://branchbuilder.jenkins.cj.dev/job/main_git_branchbuilder_pipeline_underscore/"
  else
    echo "File '$FILE' does not exist."
  fi
}
ci
